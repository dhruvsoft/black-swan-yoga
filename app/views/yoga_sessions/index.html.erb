<h1><%= @today %>'s Yoga Sessions</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Time</th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @yoga_sessions.each do |yoga_session| %>
      <tr>
        <td><%= "#{yoga_session.start_time.strftime("%I:%M %p")} - #{yoga_session.end_time.strftime("%I:%M %p")}" %></td>
        <td><%= yoga_session.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

