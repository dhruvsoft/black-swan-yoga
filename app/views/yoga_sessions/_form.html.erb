<%= form_for @yoga_session, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Yoga Session</legend>

    <div class="control-group">
      <%= f.label :day, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :day, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :instructor_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :instructor_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :start_time, :class => 'control-label' %>
      <div class="controls">
        <%= f.time_select :start_time, :class => 'time_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :end_time, :class => 'control-label' %>
      <div class="controls">
        <%= f.time_select :end_time, :class => 'time_select' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', yoga_sessions_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
